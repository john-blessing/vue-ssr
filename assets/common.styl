$base-font-size = 37.5px

px2rem($px) {
  return unit(($px / $base-font-size) / 2, 'rem');
}

html, body{
  font-family: 'PingFangSC-Regular';
  // 防止苹果手机点击闪屏
  -webkit-tap-highlight-color:transparent;
  user-select: none;
}

h1, h2, h3, p, ul, li, body{
  margin: 0;
  padding: 0;
}

.global-top-height{
  height: px2rem(24px);
  background: #f5f5f5;
}

input, button, img{
  outline: none;
}

.bgreen {
  background: #04ca73;
}

.cgreen{
  color: #04ca73;
}

.primary-button{
  font-size: px2rem(34px);
  color: #fff;
  width: px2rem(578px);
  height: px2rem(85px);
  border-radius: px2rem(85px);
  outline: none;
  border: none;
  background-color: #04ca73;
  box-shadow: 0px 3px px2rem(15px) 0px rgba(4, 202, 115, .4) 0px px2rem(20px) px2rem(60px) 0px rgba(4, 202, 115, 0.3);
}

.overflow-ellipsis{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.block-center{
  text-align: center;
}

div[type=flex]{
  display: flex;
}

div[align=center]{
  align-items: center;
}

div[justify=space-between]{
  justify-content: space-between
}

.error-info{
  font-size: px2rem(24px);
  color: #fd5454;
  position: relative;
  top: px2rem(10px);
}

.common-block{
  display: inline-block;
  width: px2rem(39px);
  height: px2rem(23px);
}

.close-eye{
  @extend .common-block;
  background: url('./images/close-eye.png') 50% 50% no-repeat;
  background-size: contain;
}

.open-eye{
  @extend .common-block;
  background: url('./images/open-eye.png') 50% 50% no-repeat;
  background-size: contain;
}

.account {
  display: inline-block;
  width: px2rem(28px);
  height: px2rem(39px);
  background: url('./images/account.png') 50% 50% no-repeat;
  background-size: contain;
}

.key {
  display: inline-block;
  width: px2rem(45px);
  height: px2rem(30px);
  background: url('./images/key.png') 50% 50% no-repeat;
  background-size: contain;
}

.clear-icon{
  display: inline-block;
  width: px2rem(30px);
  height: px2rem(30px);
  background: url('./images/clear_03.png') 50% 50% no-repeat;
  background-size: contain;
}

.clear-icon1{
  display: inline-block;
  width: px2rem(22px);
  height: px2rem(22px);
  margin-right: px2rem(20px);
  background: url('./images/close.png') 50% 50% no-repeat;
  background-size: contain;
}
